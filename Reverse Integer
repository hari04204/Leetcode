class Solution {
    public int reverse(int x) {
        int temp = x;
        int res = 0;
        int digit = 0;
        while(temp!=0){
            digit = temp%10;
            res += digit; 
            temp/=10;
            if(temp!=0){
                res*=10;
            }
            if (res > (Integer.MAX_VALUE - digit) / 10) {
                
                return 0;
            }
        }
        return res;
    }
}
